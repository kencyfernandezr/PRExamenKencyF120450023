<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRExamenKencyF120450023.MainPage">
    
    
    

    <StackLayout BackgroundColor="Blue">
        <Entry x:Name="nombre" Placeholder="Ingrese su nombre" Keyboard="Text" TextColor="White"/>
        <Entry x:Name="apellidos" Placeholder="Ingrese sus apellidos" Keyboard="Text" TextColor="White"/>
        <Entry x:Name="telefono" Placeholder="Ingrese su telefono" Keyboard="Numeric" TextColor="White"/>
        <Entry x:Name="edad" Placeholder="Ingrese su edad" Keyboard="Text" TextColor="White"/>


        <Picker x:Name="picker" Title="Seleccione un pais" TextColor="White"  />
        
        <Button x:Name="btnsalvar" Text="Salvar contacto" Clicked="btnsalvar_Clicked" TextColor="White"/>
        

    </StackLayout>
    
</ContentPage>
    

